FROM node:18-alpine

# Set work directory
WORKDIR /app

# Copy package files
COPY package.json yarn.lock ./

# Install dependencies
RUN yarn install --frozen-lockfile

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start development server with hot reload
CMD ["yarn", "dev", "--host", "0.0.0.0", "--port", "3000"]
